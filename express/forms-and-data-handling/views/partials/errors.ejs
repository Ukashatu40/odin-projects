<!-- views/partials/errors.ejs -->
<% if (locals.errors) {%>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4 max-w-md mx-auto" role="alert">
    <ul class="list-disc pl-5">
      <% errors.forEach(function(error) { %>
        <li class="text-sm"><%= error.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>
  