<%
    function getHeaderLinks(isAuth) {
        if (isAuth) {
            return [
                {
                    url: '/',
                    name: 'Home',
                },
                {
                    url: '/logout',
                    name: 'Logout',
                }, 
                {
                    url: '/membership',
                    name: 'Membership',
                }, 
                {
                    url: '/new-message',
                    name: 'Post Message',
                }
            ]
        } else {
            return [
                {
                    url: '/',
                    name: 'Home',
                },
                {
                    url: '/register',
                    name: 'Sign Up',
                }, 
                {
                    url: '/login',
                    name: 'Login',
                }
            ] 
        }
    }
%>

<%
    const links = getHeaderLinks(isAuth)
%>


<div class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white p-4 sticky top-0 shadow-lg z-10">
    <div class="max-w-3xl mx-auto flex items-center justify-between">
        <h1 class="text-2xl font-bold"><%= title %></h1>
        <nav class="flex space-x-4">
            <% links.forEach((link) => { %>
                <a href="<%= link.url %>" class="px-4 py-2 rounded-full hover:bg-white hover:text-blue-600 transition duration-300 text-sm font-medium">
                    <%= link.name %>
                </a>
            <% }) %>
        </nav>
    </div>
</div>